{% assign repo_parts = include.repository | split: '/' %}
{% assign username = repo_parts.first %}
{% assign repo_name = repo_parts.last %}

<div class="repo p-2 text-center" style="border: 1px solid var(--global-divider-color); border-radius: 6px; padding: 16px; margin: 8px;">
  <a href="https://github.com/{{ include.repository }}" style="text-decoration: none;">
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <div style="display: flex; align-items: center; gap: 8px;">
        <svg height="16" width="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M2 2.5A2.5 2.5 0 0 1 4.5 0h8.75a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75h-2.5a.75.75 0 0 1 0-1.5h1.75v-2h-8a1 1 0 0 0-.714 1.7.75.75 0 1 1-1.072 1.05A2.495 2.495 0 0 1 2 11.5Zm10.5-1h-8a1 1 0 0 0-1 1v6.708A2.486 2.486 0 0 1 4.5 9h8ZM5 12.25a.25.25 0 0 1 .25-.25h3.5a.25.25 0 0 1 .25.25v3.25a.25.25 0 0 1-.4.2l-1.45-1.087a.249.249 0 0 0-.3 0L5.4 15.7a.25.25 0 0 1-.4-.2Z"></path>
        </svg>
        <strong style="font-size: 14px;">{{ username }}/{{ repo_name }}</strong>
      </div>
      <div style="display: flex; gap: 8px; flex-wrap: wrap; justify-content: center;">
        <img alt="GitHub stars" src="https://img.shields.io/github/stars/{{ include.repository }}?style=social">
        <img alt="GitHub forks" src="https://img.shields.io/github/forks/{{ include.repository }}?style=social">
        <img alt="GitHub last commit" src="https://img.shields.io/github/last-commit/{{ include.repository }}">
        <img alt="GitHub issues" src="https://img.shields.io/github/issues/{{ include.repository }}">
      </div>
    </div>
  </a>
</div>
