{% assign repo_parts = include.repository | split: '/' %}
{% assign username = repo_parts.first %}
{% assign repo_name = repo_parts.last %}

<div class="repo" style="
  border: 1px solid var(--global-divider-color);
  border-radius: 8px;
  padding: 20px;
  margin: 10px;
  min-width: 280px;
  max-width: 400px;
  transition: box-shadow 0.3s ease;
">
  <div style="display: flex; flex-direction: column; gap: 12px;">
    <!-- Repository Title -->
    <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px;">
      <svg height="20" width="20" viewBox="0 0 16 16" fill="var(--global-theme-color)" style="flex-shrink: 0;">
        <path d="M2 2.5A2.5 2.5 0 0 1 4.5 0h8.75a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75h-2.5a.75.75 0 0 1 0-1.5h1.75v-2h-8a1 1 0 0 0-.714 1.7.75.75 0 1 1-1.072 1.05A2.495 2.495 0 0 1 2 11.5Zm10.5-1h-8a1 1 0 0 0-1 1v6.708A2.486 2.486 0 0 1 4.5 9h8ZM5 12.25a.25.25 0 0 1 .25-.25h3.5a.25.25 0 0 1 .25.25v3.25a.25.25 0 0 1-.4.2l-1.45-1.087a.249.249 0 0 0-.3 0L5.4 15.7a.25.25 0 0 1-.4-.2Z"></path>
      </svg>
      <a href="https://github.com/{{ include.repository }}"
         style="text-decoration: none; font-weight: 600; font-size: 16px; color: var(--global-theme-color);"
         rel="external nofollow noopener" target="_blank">
        {{ username }}/{{ repo_name }}
      </a>
    </div>

    <!-- Stats Row -->
    <div style="display: flex; gap: 10px; flex-wrap: wrap; align-items: center;">
      <a href="https://github.com/{{ include.repository }}/stargazers" rel="external nofollow noopener" target="_blank">
        <img alt="GitHub stars" src="https://img.shields.io/github/stars/{{ include.repository }}?style=social" style="height: 20px;">
      </a>
      <a href="https://github.com/{{ include.repository }}/network/members" rel="external nofollow noopener" target="_blank">
        <img alt="GitHub forks" src="https://img.shields.io/github/forks/{{ include.repository }}?style=social" style="height: 20px;">
      </a>
    </div>

    <!-- Info Badges Row -->
    <div style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
      <img alt="Last commit" src="https://img.shields.io/github/last-commit/{{ include.repository }}?style=flat-square" style="height: 18px;">
      <img alt="Issues" src="https://img.shields.io/github/issues/{{ include.repository }}?style=flat-square" style="height: 18px;">
    </div>
  </div>
</div>
