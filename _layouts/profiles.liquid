---
layout: page
---
<link rel="stylesheet" href="{{ '/assets/css/profiles.css' | relative_url | bust_file_cache }}">
<div class="post">
  <article class="people-list">
    {% assign position_order = page.position_order %}
    {% assign profiles = site.profiles %}
    {% assign sorted_profiles = '' | split: '' %}

    {% for position in position_order %}
      {% for profile in profiles %}
        {% assign show_profile = true %}
        {% if profile.position_key == 'future' %}
          {% assign show_profile = false %}
        {% endif %}
        {% if profile.path contains 'prospective_members/' %}
          {% assign show_profile = false %}
        {% endif %}
        {% if profile.show_in_people == true or profile.show_in_people == 'true' %}
          {% assign show_profile = true %}
        {% endif %}
        {% if profile.position_key == position and show_profile %}
          {% assign sorted_profiles = sorted_profiles | push: profile %}
        {% endif %}
      {% endfor %}
    {% endfor %}

    {% assign lang = page.lang | default: site.lang | default: 'en-us' %}

    {% for profile in sorted_profiles %}
      <div class="people-card">
        {% if profile.image %}
          {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
          <div class="people-avatar-wrapper">
            {% include figure.liquid path=profile_image_path class="rounded people-avatar" width="96" alt=profile.name %}
          </div>
        {% endif %}
        <div class="people-card-body">
          <h3 class="people-name">
            {{ profile.name }}
            {% if site.active_lang == 'ja' and profile.name_native %}
              <span class="people-name-native">{{ profile.name_native }}</span>
            {% endif %}
          </h3>

          {% assign position = site.data[lang].strings.positions[profile.position_key] %}
          {% assign profile_name = profile.name | strip %}
          {% assign has_social_links = false %}
          {% if profile.email
            or profile.website
            or profile.orcid
            or profile.google_scholar
            or profile.github
            or profile.linkedin
            or profile.twitter
            or profile.researchgate
            or profile.amazon
            or profile.amazon_author
            or profile.researchmap
            or profile.tayo
          %}
            {% assign has_social_links = true %}
          {% endif %}

          {% if position or has_social_links %}
            <div class="people-meta">
              {% if position %}
                <span class="people-position">{{ position }}</span>
              {% endif %}
              <div class="social-icons people-social-icons">
                {% if profile.email -%}
                  <a href="mailto:{{ profile.email }}" aria-label="Email {{ profile_name }}"><i class="fas fa-envelope" aria-hidden="true"></i></a>
                {%- endif %}
                {% if profile.website -%}
                  <a href="{{ profile.website }}" aria-label="Website of {{ profile_name }}"><i class="fas fa-globe" aria-hidden="true"></i></a>
                {%- endif %}
                {% if profile.orcid -%}
                  <a href="{{ profile.orcid }}" aria-label="ORCID profile of {{ profile_name }}"><i class="ai ai-orcid" aria-hidden="true"></i></a>
                {%- endif %}
                {% if profile.google_scholar -%}
                  <a href="{{ profile.google_scholar }}" aria-label="Google Scholar profile of {{ profile_name }}"
                    ><i class="ai ai-google-scholar" aria-hidden="true"></i
                  ></a>
                {%- endif %}
                {% if profile.github -%}
                  <a href="https://github.com/{{ profile.github }}" aria-label="GitHub profile of {{ profile_name }}"
                    ><i class="fab fa-github" aria-hidden="true"></i
                  ></a>
                {%- endif %}
                {% if profile.linkedin -%}
                  <a href="{{ profile.linkedin }}" aria-label="LinkedIn profile of {{ profile_name }}"
                    ><i class="fab fa-linkedin" aria-hidden="true"></i
                  ></a>
                {%- endif %}
                {% if profile.twitter -%}
                  <a href="{{ profile.twitter }}" aria-label="X profile of {{ profile_name }}"><i class="fab fa-x-twitter" aria-hidden="true"></i></a>
                {%- endif %}
                {% if profile.researchgate -%}
                  <a href="{{ profile.researchgate }}" aria-label="ResearchGate profile of {{ profile_name }}"
                    ><i class="fab fa-researchgate" aria-hidden="true"></i
                  ></a>
                {%- endif %}
                {% if profile.amazon -%}
                  <a href="{{ profile.amazon }}" aria-label="Amazon profile of {{ profile_name }}"
                    ><i class="fab fa-amazon" aria-hidden="true"></i
                  ></a>
                {%- elsif profile.amazon_author -%}
                  <a href="{{ profile.amazon_author }}" aria-label="Amazon author page of {{ profile_name }}"
                    ><i class="fab fa-amazon" aria-hidden="true"></i
                  ></a>
                {%- endif %}
                {% if profile.researchmap -%}
                  <a href="{{ profile.researchmap }}" aria-label="researchmap profile of {{ profile_name }}">
                    <img src="https://researchmap.jp/favicon.ico" alt="" aria-hidden="true" loading="lazy" decoding="async" width="14" height="14">
                  </a>
                {%- endif %}
                {% if profile.tayo -%}
                  <a href="{{ profile.tayo }}" aria-label="Tayo profile of {{ profile_name }}">
                    <img
                      src="https://tayo.jp/public/assets/favicon.ico"
                      alt=""
                      aria-hidden="true"
                      loading="lazy"
                      decoding="async"
                      width="14"
                      height="14"
                    >
                  </a>
                {%- endif %}
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </article>
</div>

