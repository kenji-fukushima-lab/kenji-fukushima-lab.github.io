---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{% t main.subtitle %}</p>
  </header>

  <article>
    {% assign profile_image_path = '/assets/img/00_tiles.png' %}
    {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
    {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width }}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
    {% include figure.liquid path = profile_image_path class = profile_image_class sizes = sizes alt = page.profile.image %}

    <div class="clearfix">{{ content }}</div>

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{% t main.contact_note %}</div>
      </div>
    {% endif %}
  </article>
</div>
